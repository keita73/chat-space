.Sidebar
  .Sidebar__Header
    .Sidebar__Header__Box
      %p.Sidebar__Header__Box__UserName 
        = current_user.name
      %ul.LeftHeader__iconList
        %li.LeftHeader__Icon
          = link_to 'groups/new' do
            = icon('fas', 'edit')
        %li.LeftHeader__Icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
